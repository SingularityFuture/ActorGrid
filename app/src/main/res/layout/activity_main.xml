<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.michael.touchlab.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/actors"/>
    <EditText
        android:id="@id/actor_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/input_actors"
        android:text="@string/default_actor1" />
    <EditText
        android:id="@id/actor_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/input_actors"
        android:text="@string/default_actor2" />
    <EditText
        android:id="@id/actor_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/input_actors"
        android:text="@string/default_actor3" />
    <EditText
        android:id="@id/actor_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/input_actors"
        android:text="@string/default_actor4" />
    <EditText
        android:id="@id/actor_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/input_actors"
        android:text="@string/default_actor5" />
    <Button
        android:id="@id/run_simulation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/run_simulation" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/output_of_simulation" />
</LinearLayout>
